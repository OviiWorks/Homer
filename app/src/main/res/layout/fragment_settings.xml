<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account"
    tools:context=".fragments.SettingsFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/cover_image_settings"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop">
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:id="@+id/profile_image_settings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/username_settings"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_settings"
                android:gravity="center"
                android:text="username">
            </TextView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:gravity="center"
        android:background="@color/colorHomerBlue"
        android:orientation="horizontal"
        android:padding="6dp">
        
        <ImageView
            android:id="@+id/set_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center">
        </ImageView>
        <ImageView
            android:id="@+id/set_instagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/instagram"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            android:layout_gravity="center">
        </ImageView>
        <ImageView
            android:id="@+id/set_webpage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/website"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center">
        </ImageView>
        <ImageView
            android:id="@+id/logout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logout"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_gravity="center">
        </ImageView>

    </LinearLayout>



</RelativeLayout>